public class Automovel{
    
    public static void main(String[] args){
        // cria instancia/objeto de Automovel
        Automovel fusca = new Automovel();    
        
        // Altera os atributos de objeto fusca
        fusca.marca = "volkswagen";
        fusca.cor = "Rosa";
        fusca.velocidade = 120;
        
        System.out.println("Marca: "+fusca.marca);
        System.out.println("Cor: "+fusca.cor);
        System.out.println("Velocidade "+fusca.velocidade+KM);
        fusca.acelerar();
        fusca.acelerar();
        fusca.reduzir();
        
        
    }
        
   //Atributos
    String marca;
    String cor;
    int velocidade;
    
    //Metodos
    void buzinar(){
        System.out.println("Beeeeeep...");
    }
    
    void acelerar(){
       velocidade = velocidade + 1;
    }

    void reduzir(){
        velocidade = velocidade - 1;
    }
}
